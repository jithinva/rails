  <%if current_user.type=="Master"%>
<div class="log_row">
      <div class="th left"><h3><%=link_to "Registration",new_user_path %></h3></div>
</div>
<div class="log_row">
      <div class="th left"><h3><%=link_to "Employee List",:controller=>"categories",:action=>"employee_list"%></h3></div>
</div>
<div class="log_row">
      <div class="th left"><h3><%=link_to "Add category",new_category_path%></h3></div>
</div>
