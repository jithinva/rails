</div>



<div class="left friend">
<h2>Categories</h2>
    <div class="log_row">
      <div class="th left"><h3>Name</h3></div>
      <div class="td left"><h3>Description</h3></div>
    </div>
	 <%for category in @categories %>
         <div class="log_row">
      		<div class="th left"><%=category.categories%></div>
      		<div class="td left"><%=category.description%></div>
                <div class="td left"><%= link_to"select", category_commodities_path(category) %>
                  <%if current_user.type=="Master"%>
                |<%=link_to "Edit",edit_category_path(category)%>|
                <%= link_to 'Destroy', category_path(category),:confirm => 'Are you sure?', :method => :delete %>
                <%end%>
                </div>
                
    	</div>

<%end%>
</div>